{
    "compilerOptions": {
        "outDir": "./build/",
        "target": "es5",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types",
            "./@types" //For now this is my non standard import location for my non official Cockpit typing
        ]
    },
    "include": ["./src/**/*"]
}
